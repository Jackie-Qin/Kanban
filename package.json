{
  "name": "kanban",
  "version": "1.2.0",
  "description": "A beautiful Kanban board with project switching and iTerm2 integration",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:vite": "vite build",
    "electron:dev": "concurrently \"vite\" \"electron .\"",
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "install-local": "rm -rf release/mac-arm64 && npm run build && osascript -e 'quit app \"Kanban\"' 2>/dev/null; pkill -f 'electron.*Kanban' 2>/dev/null; sleep 1 && rm -rf /Applications/Kanban.app && cp -R release/mac-arm64/Kanban.app /Applications/ && xattr -dr com.apple.quarantine /Applications/Kanban.app && open /Applications/Kanban.app",
    "update-local": "tsc && vite build && osascript -e 'quit app \"Kanban\"' 2>/dev/null; pkill -f 'electron.*Kanban' 2>/dev/null; sleep 1 && cp -R dist /Applications/Kanban.app/Contents/Resources/app/ && cp -R dist-electron /Applications/Kanban.app/Contents/Resources/app/ && open /Applications/Kanban.app"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@monaco-editor/react": "^4.7.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-webgl": "^0.19.0",
    "@xterm/xterm": "^5.5.0",
    "dockview": "^4.13.1",
    "node-pty": "^1.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "simple-git": "^3.30.0",
    "uuid": "^9.0.1",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.kanban.app",
    "productName": "Kanban",
    "directories": {
      "output": "release"
    },
    "publish": {
      "provider": "github",
      "owner": "Jackie-Qin",
      "repo": "Kanban"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        "zip",
        "dmg"
      ],
      "identity": null
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/node-pty/**/*"
    ],
    "asar": false
  }
}
